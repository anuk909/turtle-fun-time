{
  "name": "turtle-fun-time",
  "displayName": "Turtle Fun Time",
  "description": "A fun VSCode plugin featuring turtles to enhance your coding experience.",
  "version": "1.1.2",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:turtle-fun-time.turtleTrivia",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "turtle-fun-time.turtleTrivia",
        "title": "Turtle Trivia"
      }
    ],
    "configuration": {
      "title": "Turtle Fun Time",
      "properties": {
        "turtleFunTime.dailyGoal": {
          "type": "number",
          "default": 10,
          "description": "Set the daily goal for file saves to trigger the turtle animation."
        },
        "turtleFunTime.showTriviaReminders": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable periodic reminders to play the Turtle Trivia game."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "icon": "images/logo.png"
}
